{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}
      
      <div class="account-bar">
        <div class="account-bar__left">
          <div class="account-bar__left__items"><i class="fas fa-search"></i>
            <p class="account-bar__right__items__text">Search</p>
          </div>
        </div>
        <div class="account-bar__right">
          <div class="account-bar__right__items"><a class="account-bar__right__items__item">Login</a><a
              class="account-bar__right__items__item account">Create account</a><a
              class="account-bar__right__items__item cart"><i class="fas fa-shopping-cart"></i>0 Cart</a></div>
        </div>
      </div>
      </div>
      
   
  {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [

        {
          "type": "select",
          "id": "color_scheme",
          "options": [
            {
              "value": "background-1",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__1.label"
            },
            {
              "value": "background-2",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__2.label"
            },
            {
              "value": "inverse",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__3.label"
            },
            {
              "value": "accent-1",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__4.label"
            },
            {
              "value": "accent-2",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__5.label"
            }
          ],
          "default": "accent-1",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        },
        {
          "type": "select",
          "id": "size",
          "label": "height",
          "default": "small",

          "options": [
            {
              "value": "small",
              "label": "small"
            },
            {
              "value": "medium",
              "label": "medium"
            },
            {
              "value": "large",
              "label": "large"
            }


          ]

        },
        {
          "type": "select",
          "id": "font-size",
          "label": "Font_size",
          "default": "small",

          "options": [
            {
              "value": "small",
              "label": "small"
            },
            {
              "value": "medium",
              "label": "medium"
            },
            {
              "value": "large",
              "label": "large"
            }


          ]

        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
